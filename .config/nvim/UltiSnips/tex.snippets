snippet beg "begin{} / end{}" bA
\begin{$1}
	$0
\end{$1}
endsnippet

snippet mat "Display math" bA
\begin{displaymath}
	$1
\end{displaymath}$0
endsnippet

snippet gmat "Gather math" bA
\begin{gather*}
	$1
\end{gather*}$0
endsnippet

snippet box "Boxed equation" bA
\begin{boxeq}
	$1
\end{boxeq}$0
endsnippet

snippet inn "Inline math" wA
$${1}$`!p
if t[2] and t[2][0] not in [',', '.', '?', '-', ' ']:
    snip.rv = ' '
else:
    snip.rv = ''
`$2
endsnippet

snippet // "Fraction" iA
\frac{$1}{$2}$0
endsnippet

